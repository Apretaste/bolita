<!-- CHANGE DATE -->

<div class="row">
	<div class="col s12">
		<div class="input-field center-align">
			<i class="material-icons prefix">date_range</i>
			<input type="text" class="datepicker white-text" onkeypress="return false;">
		</div>
	</div>
</div>

<!-- AFTERNOON -->

<div class="row">
	<div class="col s12">
		<h1>Tarde</h1>
	</div>
	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(fijo_day, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Fijo<br></span>
					<span class="result"><%= papeleta_day %>-<%= fijo_day %></span>
				</div>
			</div>
		</div>
	</div>
	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(corrido1_day, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Corrido1<br></span>
					<span class="result"><%= corrido1_day %></span>
				</div>
			</div>
		</div>
	</div>
	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(corrido2_day, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Corrido2<br></span>
					<span class="result"><%= corrido2_day %></span>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- EVENING -->

<% if(fijo_night) { %>
<div class="row">
	<div class="col s12">
		<h1>Noche</h1>
	</div>

	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(papeleta_night, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Fijo<br></span>
					<span class="result"><%= papeleta_night %>-<%= fijo_night %></span>
				</div>
			</div>
		</div>
	</div>
	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(corrido1_night, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Corrido1<br></span>
					<span class="result"><%= corrido1_night %></span>
				</div>
			</div>
		</div>
	</div>
	<div class="col s4">
		<div class="card">
			<div class="card-image">
				<div class="img-container">
					<div class="img" style="<%= getImage(corrido2_night, "{{APP_SERVICE_PATH}}/images", 35) %>"></div>
				</div>
				<div class="card-content center-align">
					<span class="name">Corrido2<br></span>
					<span class="result"><%= corrido2_night %></span>
				</div>
			</div>
		</div>
	</div>
</div>
<% } %>

<!-- MESSAGE -->

<div class="col s12">
	<p style="font-size:smaller;">Los resultados pueden demorar hasta 30 minutos en ser publicados en la web oficial de apuestas de Florida, de donde salen nuestros números. Última actualización <%= moment(updated).format('D [de] MMMM [del] YYYY [a las] h:mm:ss a') %>.</p>
</div>

<!-- SHARE MODAL -->

<div id="shareModal" class="modal">
	<div class="modal-content">
		<div class="input-field">
			<textarea id="message" class="materialize-textarea black-text"></textarea>
			<label for="message">Escriba un texto para compartir</label>
		</div>
		<ul class="collection one-line preview">
			<li class="collection-item avatar">
				<i class="fas fa-fan material-icons circle"></i>
				<span class="title black-text">Números de la bolita el <%= moment(corrida).format('M/D/Y') %></span>
			</li>
		</ul>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="share()" class="modal-close waves-effect waves-green green-text btn-flat">Enviar</a>
	</div>
</div>